<% content_for :page_title, "Posts" %>
<p id="notice">
		<%= notice %>
</p>
<h1>Posts</h1>
<table>
		<thead>
				<tr>
						<th>Title</th>
						<th>Author</th>
						<th>Photo url</th>
						<th>Caption</th>
						<th colspan="3"></th>
				</tr>
		</thead>
		<tbody>
				<% @posts.each do |post| %>
				<tr>
						<td>
								<%= post.title %>
						</td>
						<td>
								<%= post.author %>
						</td>
						<td>
								<%= post.photo_url %>
						</td>
						<td>
								<%= post.caption %>
						</td>
						<td>
								<%= link_to 'Show', post %>
						</td>
						<td>
								<%= link_to 'Edit', edit_post_path(post) %>
						</td>
						<td>
								<%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
						</td>
				</tr>
				<% end %>
		</tbody>
		<%= render partial: "layouts/sort_form", locals: {form_url: @form_url} %>
</table>
<br>
<%= link_to 'New Post', new_post_path %>